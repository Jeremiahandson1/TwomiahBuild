# BuildPro Backend — Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/buildpro

# JWT secrets — generate with: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=
JWT_REFRESH_SECRET=

# Cron secret — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=

# Field encryption key — must be a 64-character hex string
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FIELD_ENCRYPTION_KEY=

# App URLs
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Email (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Storage (S3 or local)
STORAGE_BACKEND=local
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=

# Twilio (platform-level SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# QuickBooks OAuth
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=http://localhost:3001/api/integrations/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# Webhook secrets
CALLRAIL_WEBHOOK_SECRET=
WISETACK_WEBHOOK_SECRET=
GENERIC_WEBHOOK_SECRET=

# One-time bootstrap — remove after first agency_admin is created
# SETUP_SECRET=

# Optional: Sentry DSN
# SENTRY_DSN=

# Optional: Render API key (for auto-deploy feature)
# RENDER_API_KEY=
# GITHUB_TOKEN=
