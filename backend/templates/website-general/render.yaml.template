# {{COMPANY_NAME}} — Website + CMS — Render Blueprint
# Generated by BuildPro Factory

services:
  - type: web
    name: {{COMPANY_SLUG}}-website
    runtime: node
    plan: starter
    buildCommand: npm install && cd admin && npm install && npm run build
    startCommand: node server-static.js
    envVars:
      - key: JWT_SECRET
        generateValue: true
      - key: NODE_ENV
        value: production
      - key: SITE_URL
        value: https://{{DOMAIN}}
    disk:
      name: data
      mountPath: /opt/render/project/src/persistent
      sizeGB: 1
