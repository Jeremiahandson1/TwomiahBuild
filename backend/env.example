# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/buildpro?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Email - Pick ONE provider and set its keys
# Without any keys, emails are logged to console (dev mode)

# Option 1: SendGrid (recommended)
SENDGRID_API_KEY=""

# Option 2: Mailgun
# MAILGUN_API_KEY=""
# MAILGUN_DOMAIN=""

# Option 3: AWS SES
# AWS_SES_REGION=""
# AWS_SES_SMTP_USER=""
# AWS_SES_SMTP_PASS=""

# Option 4: Resend
# RESEND_API_KEY=""

# Option 5: Postmark
# POSTMARK_API_KEY=""

# Option 6: Any SMTP server
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_SECURE="false"

# From address (used by all providers)
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="BuildPro"

# File Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Stripe Payments
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
# Optional: separate webhook secret for Factory billing events
# STRIPE_FACTORY_WEBHOOK_SECRET=""

# Auto-Deploy (Render + GitHub)
# Render API key from https://dashboard.render.com → Account → API Keys
RENDER_API_KEY=""
# Render workspace/owner ID (from dashboard URL after /d/)
RENDER_OWNER_ID=""
# GitHub personal access token with 'repo' scope
# Create at https://github.com/settings/tokens → Fine-grained → repo permissions
GITHUB_TOKEN=""
# GitHub org or username to create customer repos under
GITHUB_ORG=""

# Logging
LOG_LEVEL=info

# File Storage (REQUIRED for production — default is local disk, wiped on Render redeploy)
# Set to "s3" to use Cloudflare R2 or AWS S3
STORAGE_BACKEND=local

# Cloudflare R2 / AWS S3 (required when STORAGE_BACKEND=s3)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
# For AWS S3, use these instead:
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION=""
# AWS_S3_BUCKET=""

# Field Encryption (REQUIRED for production — encrypts sensitive data like Twilio tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FIELD_ENCRYPTION_KEY=""

# Database Backup Confirmation (set to "true" after verifying backups are configured on Render)
DB_BACKUPS_CONFIRMED=false
