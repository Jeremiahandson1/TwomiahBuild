<%
const phone = (typeof settings !== 'undefined' && settings && settings.phone) ? settings.phone : '(555) 123-4567';
const phoneRaw = phone.replace(/\D/g, '');

function getImageUrl(p) {
  if (!p) return '';
  if (p.startsWith('http')) return p;
  if (p.startsWith('/')) return p;
  return '/uploads/' + p;
}

function formatDate(dateStr) {
  if (!dateStr) return '';
  const d = new Date(dateStr);
  return d.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}

function estimateReadTime(content) {
  if (!content) return '3 min read';
  const text = content.replace(/<[^>]+>/g, '');
  const words = text.split(/\s+/).length;
  const minutes = Math.max(1, Math.round(words / 225));
  return minutes + ' min read';
}

const publishedPosts = (typeof posts !== 'undefined' && Array.isArray(posts)) 
  ? posts.filter(p => p.published).sort((a, b) => new Date(b.publishedAt) - new Date(a.publishedAt))
  : [];
%>

<div class="blog-page">
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <a href="/" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Home
      </a>
      <h1>Tips & Insights</h1>
      <p class="hero-tagline">Expert insights and helpful articles from BuildPro Demo Co in Austin.</p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="blog-list-section">
    <div class="container">
      <% if (publishedPosts.length === 0) { %>
        <div class="blog-empty">
          <h3>Posts coming soon</h3>
          <p>Check back for helpful articles from Greater Austin Area.</p>
        </div>
      <% } else { %>
        <div class="blog-grid">
          <% publishedPosts.forEach(function(post) { %>
            <a href="/blog/<%= post.slug %>" class="blog-card">
              <% if (post.image) { %>
                <div class="blog-card-image">
                  <img src="<%= getImageUrl(post.image) %>" alt="<%= post.title %>" loading="lazy">
                </div>
              <% } else { %>
                <div class="blog-card-image blog-card-placeholder">
                  <span class="blog-category-badge"><%= post.category || 'article' %></span>
                </div>
              <% } %>
              <div class="blog-card-content">
                <div class="blog-card-meta">
                  <span class="blog-date"><%= formatDate(post.publishedAt) %></span>
                  <span class="blog-read-time"><%= estimateReadTime(post.content) %></span>
                </div>
                <h2><%= post.title %></h2>
                <p><%= post.excerpt %></p>
                <span class="blog-read-more">Read Article →</span>
              </div>
            </a>
          <% }); %>
        </div>
      <% } %>
    </div>
  </section>

  <!-- CTA -->
  <section class="blog-cta-section">
    <div class="container">
      <h2>Have a Question About Your Home?</h2>
      <p>We're happy to help — even if you're not ready for a project yet.</p>
      <div class="hero-buttons">
        <a href="/#contact" class="btn btn-primary btn-lg">Get a Free Estimate</a>
        <a href="tel:<%= phoneRaw %>" class="btn btn-outline btn-lg">Call <%= phone %></a>
      </div>
    </div>
  </section>
</div>

